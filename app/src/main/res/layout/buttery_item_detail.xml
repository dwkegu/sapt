<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/header_mat_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/headerImg_buttery_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/company_title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="@string/block_data"
            android:textSize="36sp"
            android:textColor="@color/list_text_color"/>
            <Button
                android:id="@+id/button_buttery_item_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/back"
                android:textSize="24sp"
                android:textColor="@color/white_line"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_shape"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/data_excel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_color"
            android:text="数据表格"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <Button
            android:id="@+id/balance_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_line"
            android:text="均    衡"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <Button
            android:id="@+id/volt_graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_line"
            android:text="电压曲线"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <Button
            android:id="@+id/temp_graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_line"
            android:text="温度曲线"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_shape"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
    <GridView
        android:id="@+id/buttery_mat_detail_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:numColumns="3"
        android:visibility="visible"/>
    <com.psf.sapt.drawing.DataGraphView
        android:id="@+id/lcu_item_graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:visibility="gone"/>


</LinearLayout>